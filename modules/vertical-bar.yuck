(include './modules/active-workspace.yuck')
(include './modules/vertical-system-info.yuck')
(include './modules/workspaces.yuck')
(include './modules/clock-date.yuck')
(include './modules/weather.yuck')

(defwidget vertical-bar []
  (box
    :class 'bar-background'
    :space-evenly false
    :orientation 'h'
    (centerbox
      :class 'bar'
      :width 1062
      (left-vertical)
      (center-vertical)
      (right-vertical)
    )
  )
)

(defwidget left-vertical []
  (box
    :class 'bar-left'
    :space-evenly false
    :valign 'center'
    :halign 'start'
    :spacing 5
    (revealer
      :reveal true
      :transition 'slideright'
      (vertical-system-info)
    )
  )
)

(defwidget center-vertical []
  (box
    :space-evenly false 
    :orientation 'v'
    (box
      :space-evenly false 
      :halign 'center'
      :valign 'start'
      :spacing 5
      (box
        :space-evenly false
        :spacing 5
        :class 'module'
        (revealer
          :reveal true
          :transition 'slideright'
          :duration '0ms'
          (workspaces)
        )
        (revealer
          :reveal true
          :transition 'slideright'
          :duration '0ms'
          (activeworkspace)
        )
      )
    )
  )
)

(defwidget right-vertical []
  (eventbox
    (box
      :space-evenly false
      :spacing 5
      :valign 'center'
      :halign 'end'
      :class 'bar-right'
      (weather)
      (clock-date)
    )
  )
)
